<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp" app:srcCompat="@drawable/a"
            android:id="@+id/photoView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorAccent"
            tools:srcCompat="@drawable/a"
            android:layout_marginTop="192dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.533"/>

    <TextView
            android:text="@string/photo_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photoPath" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/photoView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/xyzValue" app:layout_constraintVertical_bias="0.539"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="@string/photo_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photoSelect" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            tools:text="@string/photo_select"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/xyzValue"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/gestureSate"/>
    <TextView
            android:text="@string/xyz_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xyzValue"
            app:layout_constraintTop_toBottomOf="@+id/photoPath"
            app:layout_constraintBottom_toTopOf="@+id/photoSelect" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="@string/gesture_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gestureSate" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>